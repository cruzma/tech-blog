<article class="post">
    <div class="title">
    <a href="/dashboard/edit/{{id}}">{{title}}</a>
    by {{user.username}} on
    {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>

    <div><span>{{post_description}}</span></div>
    
</article>